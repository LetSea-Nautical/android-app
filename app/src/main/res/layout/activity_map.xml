<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.LetSea"
    android:background="@color/blue_main"
    tools:context=".Map.MapActivity">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/outline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004" />

    <TextView
        android:id="@+id/track_detail"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/displayreguler"
        android:text="TRACK DETAIL"
        android:textColor="@color/grey_font"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="591dp"
        android:background="@color/blue_list"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/logo_ship"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_ship_logo"
            android:scaleType="centerCrop"
            android:src="@drawable/ship"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/ptbold"
            android:textColor="@color/yellow_name"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_ship"
            tools:text="Name" />


        <TextView
            android:id="@+id/item_mmsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ptbold"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_name"
            tools:text="MMSI" />

        <TextView
            android:id="@+id/tv_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="190dp"
            android:fontFamily="@font/ptreguler"
            android:text="ARRIVAL_DATE"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/ptreguler"
            android:text="LAT"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_date_time" />

        <TextView
            android:id="@+id/tv_lon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/ptreguler"
            android:text="LON"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_lat" />

        <TextView
            android:id="@+id/tv_arr_lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/ptreguler"
            android:text="ARR_LAT"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_lon" />

        <TextView
            android:id="@+id/tv_arr_lon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/ptreguler"
            android:text="ARR_LON"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_arr_lat" />

        <TextView
            android:id="@+id/tv_sog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/ptreguler"
            android:text="SOG"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_arr_lon" />

        <TextView
            android:id="@+id/tv_cog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/ptreguler"
            android:text="COG"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_sog" />

        <TextView
            android:id="@+id/item_arrival_date"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/ptreguler"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_date_time"
            tools:text="2022-03-30 00:00:05" />

        <TextView
            android:id="@+id/item_lat"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/ptreguler"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_lat"
            tools:text="37.2" />

        <TextView
            android:id="@+id/item_lon"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/ptreguler"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_lon"
            tools:text="-74.2" />

        <TextView
            android:id="@+id/item_arr_lat"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/ptreguler"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_arr_lat"
            tools:text="38.2" />

        <TextView
            android:id="@+id/item_arr_lon"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/ptreguler"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_arr_lon"
            tools:text="-73.2" />

        <TextView
            android:id="@+id/item_sog"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/ptreguler"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_sog"
            tools:text="35" />

        <TextView
            android:id="@+id/item_cog"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/ptreguler"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_cog"
            tools:text="90" />

        <Button
            android:id="@+id/btn_vessel_detail"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@color/blue_secondary"
            android:fontFamily="@font/ptreguler"
            android:text="@string/vessel_detail"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>