<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:theme="@style/Theme.LetSea"
    android:layout_height="match_parent"
    android:background="@color/blue_main"
    tools:context=".Setting.EditPasswordActivity">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/outline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004" />

    <TextView
        android:id="@+id/tv_change"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/displayreguler"
        android:text="CHANGE PASSWORD"
        android:textColor="@color/grey_font"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/current_password"
        android:layout_width="305dp"
        android:layout_height="41dp"
        android:layout_marginTop="288dp"
        android:background="@drawable/background_edit_text"
        android:drawablePadding="10dp"
        android:fontFamily="@font/ptreguler"
        android:hint="Current Password"
        android:paddingLeft="20dp"
        android:textColor="@color/grey_font"
        android:textColorHint="@color/grey_font"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/new_password"
        android:layout_width="305dp"
        android:layout_height="41dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/background_edit_text"
        android:drawablePadding="10dp"
        android:fontFamily="@font/ptreguler"
        android:hint="New Password"
        android:paddingLeft="20dp"
        android:textColor="@color/grey_font"
        android:textColorHint="@color/grey_font"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_password" />

    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/blue_secondary"
        android:fontFamily="@font/ptreguler"
        android:text="@string/change_password"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_password" />

</androidx.constraintlayout.widget.ConstraintLayout>